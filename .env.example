# Copy this file to .env and edit values

# Database Configuration (Optional - uses SQLite if not set)
DATABASE_URL=postgresql://user:password@localhost:5432/translate_db

# Primary Gemini API Keys (Required)
GEMINI_API_KEY_ODD=your_gemini_api_key_1
GEMINI_API_KEY_EVEN=your_gemini_api_key_2

# Multi-Provider AI Services (Optional - for 30-40% accuracy improvement)
# Groq API (deepseek-r1-distill-llama-70b, qwen3-32b)
GROQ_API_KEY=your_groq_api_key

# OpenRouter API (multiple free models)
OPENROUTER_API_KEY=your_openrouter_api_key

# Cerebras Systems API (gpt-oss-120b, qwen-3-235b)
CEREBRAS_API_KEY=your_cerebras_api_key

# Security Secrets (Required for Phase 4.1 - Security & Authentication)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_session_secret_here_min_32_chars
API_KEY_ENCRYPTION_KEY=your_random_encryption_key_here_min_32_chars

# Optional: OpenAI and Anthropic API Keys (for fallback/consensus)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Redis for distributed rate limiting
# REDIS_URL=redis://localhost:6379

# Neo4j Graph Database Configuration (Phase 4 - Knowledge Graph)
# Connection String (format: neo4j://host:port or bolt://host:port)
NEO4J_URI=bolt://localhost:7687

# Authentication
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=tibetan_knowledge_graph_2025

# Database Name (default: neo4j)
NEO4J_DATABASE=neo4j

# Memory Configuration (optional - Docker Compose defaults)
# NEO4J_HEAP_INITIAL=512m
# NEO4J_HEAP_MAX=2g
# NEO4J_PAGECACHE=1g

# Authentication for Docker Compose (format: username/password)
# NEO4J_AUTH=neo4j/your_password_here

# Server Configuration
PORT=5001
NODE_ENV=development
